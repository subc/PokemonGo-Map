# git
yum install -y git
git config --global color.diff auto
git config --global color.status auto
git config --global color.branch auto
git config --global color.interactive auto
git config --global alias.co commit
git config --global alias.cp cherry-pick
git config --global alias.br branch
git config --global alias.st status
git st

# python
python --version
yum groupinstall -y "Development tools"
yum install -y zlib-devel bzip2-devel openssl-devel ncurses-devel sqlite-devel readline-devel tk-devel gdbm-devel db4-devel libpcap-devel xz-devel
wget https://www.python.org/ftp/python/2.7.12/Python-2.7.12.tar.xz
tar xf Python-2.7.12.tar.xz
cd Python-2.7.12
./configure --prefix=/usr/local --enable-unicode=ucs4 --enable-shared LDFLAGS="-Wl,-rpath /usr/local/lib"
make && make altinstall
/usr/local/bin/python2.7 --version


# redis
yum -y install redis
ls -al /etc/redis*
vi /etc/redis.conf  # fix databases
systemctl start redis.service
systemctl status redis.service
redis-cli
sudo systemctl enable redis
# DB と bidn 0.0.0

# pip
sudo easy_install pip
sudo easy_install virtualenv
sudo easy_install virtualenvwrapper
pip
pip install pbr
sudo easy_install virtualenvwrapper

# mkvirualenv
export WORKON_HOME=$HOME/.virtualenvs
source `which virtualenvwrapper.sh`
echo "export WORKON_HOME=$HOME/.virtualenvs" >> ~/.bash_profile
echo "source `which virtualenvwrapper.sh`" >> ~/.bash_profile
mkvirtualenv --no-site-packages --python=/usr/local/bin/python2.7 poke

# supervisor
easy_install supervisor
supervisorctl
echo "alias sctl='supervisorctl'" >> ~/.bash_profile

# bash
echo "# color" >> ~/.bash_profile
echo "export PS1='\[\e[0;37m\]app2:\u@\h:\w${text}$\[\e[m\] '" >> ~/.bash_profile
echo "workon poke" >> ~/.bash_profile
echo "cd /var/poke/pokemap" >> ~/.bash_profile

##### ssh 鍵のコピー
scp ~/.ssh/ikeda poke-app1:/root/.ssh/
scp ~/.ssh/ikeda.pub poke-app1:/root/.ssh/
scp ~/.ssh/config poke-app1:/root/.ssh/

# create git
mkdir -p /var/poke/
cd /var/poke
git clone git@github.com:subc/PokemonGo-Map.git pokemap
cd pokemap
pip install -r ./requirements.txt
pip freeze


# network
ifconfig
ip link
cd /etc/sysconfig/network-scripts
ls
cp ifcfg-eth0 ifcfg-eth1
vi ./ifcfg-eth1
    ###### EXAMPLE
DEVICE="eth1"
BOOTPROTO="none"
ONBOOT="yes"
TYPE="Ethernet"
IPADDR="192.168.0.3"
NETMASK="255.255.255.0"
    ###### EXAMPLE

service network restart
ifconfig

# ロードバランサ設定
# IPADDRESS に ロードバランサのグローバルIPを設定するだけでok
vi /etc/sysconfig/network-scripts/ifcfg-lo


